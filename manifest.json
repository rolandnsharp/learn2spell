{
  "name": "Learn 2 Spell",
  "description": "Learn spelling and vocabulary with touch-typing drills. Save words you come across on internet using the right-click menu.",
  "version": "2.7",  
  "manifest_version": 2,


"content_security_policy": "script-src 'self' https://twitter.com; object-src 'self'",
"content_security_policy": "script-src 'self' https://en.wiktionary.org; object-src 'self'",
"content_security_policy": "script-src 'self' https://cdn.syndication.twimg.com; object-src 'self'",


"background": {
    "page": "background.html"
  },

"browser_action": {
    "default_icon": "2.png"
    
  },


  "icons": {
    "128": "icon.png",
    "16": "2.png"
  },
  "permissions": [  
    "http://*/*", 
    "https://*/*", 
    "https://api.twitter.com/*",
    "https://cdn.syndication.twimg.com/",
    "https://twitter.com/",
    "http://twitter.com/",
    "https://en.wiktionary.org/",
    "http://en.wiktionary.org/",
    "background",
    "tabs",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "notifications"]

}
