{
  "name": "Learn 2 Spell",
  "description": "Learn spelling and vocabulary with touch-typing drills.",
  "version": "1.5",  
  "manifest_version": 2,

"content_security_policy": "script-src 'self' https://en.wiktionary.org; object-src 'self'",

"background": {
    "page": "background.html"
  },

"browser_action": {
    "default_icon": "2.png",
    "default_popup": "popup.html"
  },


  "icons": {
    "128": "icon.png",
    "16": "2.png"
  },
  "permissions": [  
    "http://*/*", 
    "https://*/*", 
    "https://en.wiktionary.org/",
    "http://en.wiktionary.org/",
    "background",
    "tabs",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "notifications"]

}
