{
  "name": "Learn 2 Spell",
  "description": "Learn spelling, touch typing and, vocabulary",
  "version": "1.4",  
  "manifest_version": 2,

"content_security_policy": "script-src 'self' https://en.wiktionary.org; object-src 'self'",

"background": {
    "page": "background.html"
  },

"app": {
    "launch": {
      "local_path": "index.html"    

    }
  },


  "icons": {
    "128": "icon.png",
    "16": "icon.png"
  },
  "permissions": [  
    "http://*/*", 
    "https://*/*", 
    "https://en.wiktionary.org/",
    "http://en.wiktionary.org/",
    "background",
    "tabs",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "notifications"]

}
